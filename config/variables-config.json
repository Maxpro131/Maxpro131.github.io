{
  "$show_particles": {
    "type": "boolean",
    "input": "toggle",
    "readonly": false,
    "label": "Show particles"
  },
  "$ui_scale": {
    "type": "number",
    "input": "slider",
    "min": 0.5,
    "max": 3,
    "step": 0.1,
    "readonly": false,
    "label": "UI scale"
  },
  "$position": {
    "type": "number_array",
    "count": 3,
    "readonly": false,
    "label": "Position (x, y, z)"
  },
  "$title_text": {
    "type": "string",
    "input": "text",
    "readonly": false,
    "label": "Title text"
  }
}
